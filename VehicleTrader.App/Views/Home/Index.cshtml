@using VehicleTrader.Models;

@{
    ViewData["Title"] = "Index";
}

<img src="~/img/homepage-img.jpg" style="min-width:1000px" width="1600" height="900">
  <div class="w3-display-left w3-padding w3-col 16 m4" style="margin-left:175px">
    <div class="w3-container" style="background-color:#b2cce6">
      <h2><img src="~/img/navbar-img.png" /><i class="w3-margin-right"></i>Find Your Vehicle</h2>
    </div>
    <div class="w3-container w3-white w3-padding-16">
        <form id="search" method="post">
            <div class="w3-row-padding" style="margin:0 -16px;">
                <div class="w3-half w3-margin-bottom">
                    <label>Make</label>
                    <select class="w3-input w3-border" name="Make">
                        <option value="Any">Any</option>
                        @foreach (var make in (List<Manufacturer>)ViewData["Manufacturers"])
                        {
                            <option value="@make.Name">@make.Name</option>
                        }
                    </select>
                </div>
                <div class="w3-half">
                    <label>Model</label>
                    <select class="w3-input w3-border" name="Model">
                        <option value="Any">Any</option>
                        @foreach (var carmodel in (List<Model>)ViewData["Models"])
                        {
                            <option value="@carmodel.Name">@carmodel.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="w3-row-padding" style="margin:8px -16px;">
                <div class="w3-half w3-margin-bottom">
                    <label>Year<i class="fa fa-calendar-o"></i></label>
                    <br />
                    <input type="text" class="w3-input w3-border" name="year" form="search">
                </div>
                <div class="w3-half">
                    <label>Max Price</label>
                    <select class="w3-input w3-border" name="Year">
                        <option>Any</option>
                        @foreach (var maxPrice in (List<MaxPrice>)ViewData["MaxPrices"])
                        {
                            <option value="@maxPrice.Price">$@maxPrice.Price</option>
                        }
                    </select>
                </div>
            </div>
            <div class="w3-row-padding" style="margin:8px -16px;">
                <div class="w3-half w3-margin-bottom">
                    <label>Engine</label>
                    <select class="w3-input w3-border" name="Engine">
                        <option>Any</option>
                        @foreach (var engine in (List<Engine>)ViewData["Engines"])
                        {
                            <option value="@engine.EngineType">@engine.EngineType</option>
                        }
                    </select>
                </div>
                <div class="w3-half">
                    <label>Gearbox</label>
                    <select class="w3-input w3-border" name="Gearbox">
                        <option>Any</option>
                        @foreach (var gearbox in (List<Gearbox>)ViewData["Gearboxes"])
                        {
                            <option value="@gearbox.GearboxType">@gearbox.GearboxType</option>
                        }
                    </select>
                </div>
            </div>
            <button class="w3-button" style="background-color:#b2cce6" type="submit"><i class="fa fa-search w3-margin-right"></i>Find offers</button>
        </form>
    </div>
  </div>

